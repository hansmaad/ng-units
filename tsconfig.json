{
    "compileOnSave": false,
    "compilerOptions": {
      "baseUrl": "./",
      "outDir": "./dist/out-tsc",
      "sourceMap": true,
      "declaration": false,
      "downlevelIteration": true,
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "importHelpers": true,
      "target": "ES2022",
      "module": "ES2022",
      "typeRoots": [
        "node_modules/@types"
      ],
      "lib": [
        "ES2022",
        "dom"
      ],
      "paths": {
        "ng-units": [
          "dist/ng-units"
        ],
        "ng-units/*": [
          "dist/ng-units/*"
        ]
      }
    },
    "angularCompilerOptions": {
      "fullTemplateTypeCheck": true,
      "strictInjectionParameters": true
    }
}
